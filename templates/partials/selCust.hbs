<div class="container">
    <div class="user">
        <div>
            <h1>Customer Details</h1>
            <h3>{{user._id}}</h3>
            <h3>{{user.username}}</h3>
            <h3>{{user.email}}</h3>
            <h3>{{user.balance}}</h3>
        </div>
        <div>
            {{#if user.transactions}}
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Transaction Id</th>
                            <th>Amount</th>
                            <th>From</th>
                            <th>To</th>
                            <th>Time Stamp</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each user.transactions}}
                                <tr class="align-items-center" style="transform: rotate(0);">
                                    <th>{{this._id}}</th>
                                    <td class="align-middle">{{this.amount}}</td>
                                    <td class="align-middle">{{this.from}}</td>
                                    <td class="align-middle">{{this.to}}</td>
                                    <td class="align-middle">{{this.createdAt}}</td>
                                </tr>
                        {{/each}}
                    </tbody>
                </table>
            {{else}}
                <h1>No User Transactions</h1>
            {{/if}}
        </div>
    </div>
</div>