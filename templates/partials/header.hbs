<div class="container-fluid gradient-custom mb-5 px-5">
    
    <nav class="navbar navbar-expand-sm navbar-dark">
        <div class="container-fluid">
            <span class="navbar-brand mb-0 h1">BBS</span>

            <button class="navbar-toggler shadow-none" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
                <ul class="navbar-nav">

                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" data-bs-target="#register" data-bs-toggle="modal" style="cursor: pointer;">Register</a>
                    </li>

                </ul>

            </div>
        </div>
    </nav>

    <div id="register" class="modal fade" role="dialog">
        <div class="modal-dialog modal-sm" role="content">
            <div class="modal-content">
                <div class="modal-header gradient-custom">
                    <h4 class="modal-title">Register New User</h4>
                    <button type="button" class="btn-close bg-warning shadow-none" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form action="/register" method="POST">
                        <div class="form-row pb-1">
                            <input autocomplete="off" class="form-control text-center col-12" type="text" name="username" id="username" placeholder="Username">
                        </div>
                        <div class="form-row pb-1">
                            <input autocomplete="off" class="form-control text-center col-12" type="email" name="email" id="email" placeholder="Email">
                        </div>
                        <div class="form-row pb-1">
                            <input autocomplete="off" class="form-control text-center col-12" type="password" name="password" id="password" placeholder="Password">
                        </div>
                        <div class="form-row pb-1">
                            <input autocomplete="off" class="form-control text-center col-12" type="number" name="balance" id="balance" placeholder="Balance">
                        </div>
                        <div class="form-row py-1">
                            <button class="btn btn-primary" type="submit">Register</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>