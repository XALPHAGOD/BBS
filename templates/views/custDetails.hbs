<!DOCTYPE html>
<html lang="en">
<head>
    {{>links}}
    <title>Customer Details</title>
</head>
<body class="d-flex flex-column min-vh-100 p-5">
    <div class="container mt-5 d-flex flex-column align-items-center">
        <div class="row d-flex flex-column align-items-center mb-5">

            <div class="card p-0">
                <div class="card-header" style="background: linear-gradient(to left, rgba(166, 0, 255, 1), rgba(0, 255, 204, 1));">
                    <h1 class="card-title text-center text-white">Customer Details</h1>
                </div>
                <div class="card-body">
                    <h3 class="text-center mb-3">{{user.username}}</h3>
                    <h3 class="text-center mb-4">{{user.email}}</h3>
                    <h6 class="text-center mt-5">User Id: {{user._id}}</h6>
                </div>
                <div class="card-footer bg-info bg-gradient">
                    <h2 class="text-center text-white">Balance: {{user.balance}}</h2>
                </div>
            </div>

        </div>

        <div class="row mb-5">
            <a class="btn btn-primary" href="/transfer/{{user._id}}">Funds Transfer</a>
        </div>

        <div class="row mb-5 w-50 d-flex justify-content-around">
            <a class="btn btn-primary text-white col-sm-4 my-3" href="/customers">Back</a>
            <a class="btn btn-primary text-white col-sm-4 my-3" href="/home">Home</a>
        </div>

        <div class="row mb-5">
            {{#if user.transactions}}
                <table class="table table-hover" style="box-shadow: 0 1px 10px rgba(0, 255, 204, 1);;">
                    <thead>
                        <tr>
                            <th class="text-center">Transaction Id</th>
                            <th class="text-center">Amount</th>
                            <th class="text-center">From</th>
                            <th class="text-center">To</th>
                            <th class="text-center">Time Stamp</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each user.transactions}}
                                <tr class="align-items-center" style="transform: rotate(0);">
                                    <th class="text-center">{{this._id}}</th>
                                    <td class="text-center">{{this.amount}}</td>
                                    <td class="text-center">{{this.from}}</td>
                                    <td class="text-center">{{this.to}}</td>
                                    <td class="text-center">{{this.createdAt}}</td>
                                </tr>
                        {{/each}}
                    </tbody>
                </table>
            {{else}}
                <h1>No Customer Transactions</h1>
            {{/if}}
        </div>
    </div>
    {{>closing}}
</body>
</html>